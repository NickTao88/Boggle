  do{
      
      scoreLimit1 = JOptionPane.showInputDialog("Please choose a score limit");//getting the score limit
      try {
        scoreLimit=Integer.valueOf(scoreLimit1); 
      }catch (Exception e) {
        scoreLimit=0;
      }
      if(scoreLimit<1){
        JOptionPane.showMessageDialog(null, "You have to enter a value bigger than 1", "alert", JOptionPane.ERROR_MESSAGE);
      }
    }while(scoreLimit<1);
